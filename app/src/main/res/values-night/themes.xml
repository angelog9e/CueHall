<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CueHall" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>

    </style>

    <style name="DialogTheme" parent="Theme.MaterialComponents.DayNight.Dialog">
        <!-- General dialog colors -->
        <item name="colorAccent">@color/black_sun</item>
        <item name="android:textColorPrimary">@color/june</item>
        <item name="android:textColorSecondary">@color/Moonlight_white</item>
        <item name="android:background">@color/knight_black</item>
        <item name="android:textColor">@color/Moonlight_white</item>

        <!-- TimePicker specific colors -->
        <item name="android:numbersTextColor">@color/june</item>
        <item name="android:timePickerStyle">@style/CustomTimePicker</item>

    </style>

    <!-- Define CustomTimePicker style -->
    <style name="CustomTimePicker" parent="Widget.MaterialComponents.TimePicker">
        <!-- Removed android:headerTextColor since it's private -->
        <item name="android:numbersBackgroundColor">@color/black_sun</item>
        <item name="android:textColorPrimary">@color/june</item>
        <item name="android:background">@color/knight_black</item>

        <item name="android:timePickerMode">spinner</item> <!-- You can change this to 'clock' if needed -->
    </style>

</resources>