<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_interface"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainInterface">

    <!-- Main Content Layout -->
    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#151515">

        <!-- TEXT TITLE -->
        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/quicksand_bold"
            android:text="CUEHALL"
            android:letterSpacing="0.1"
            android:layout_marginTop="40dp"
            android:textColor="@color/white"
            android:textSize="34sp" />

        <!-- ACCOUNT BUTTON -->
        <Button
            android:id="@+id/account_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="38dp"
            android:layout_marginEnd="22dp"
            android:background="@drawable/acc_button" />

        <!-- FOOTER-->
        <RelativeLayout
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/footer_bg">

            <!-- Button Divider -->
            <!-- View
                android:id="@+id/line_bar_one"
                android:layout_width="4dp"
                android:layout_height="80dp"
                android:layout_marginStart="160dp"
                android:layout_alignParentBottom="true"
                android:background="@color/black"-->

            <!--View
                android:id="@+id/line_bar_two"
                android:layout_width="4dp"
                android:layout_height="80dp"
                android:layout_marginEnd="160dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:background="@color/black"-->

            <!-- FOOTER BUTTONS -->
            <Button
                android:id="@+id/footer_tables_button"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:text="TABLES"
                android:layout_alignParentStart="true"
                android:layout_marginStart="60dp"
                android:fontFamily="@font/quicksand_bold"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="#fff4f0"
                android:background="@drawable/rounded_button_bg"
                android:drawableTop="@drawable/ic_table"
                android:paddingTop="8dp"
                android:paddingBottom="2dp" />

            <Button
                android:id="@+id/footer_bookings_button"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:text="BOOKINGS"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="60dp"
                android:fontFamily="@font/quicksand_bold"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="#fff4f0"
                android:background="@drawable/rounded_button_bg"
                android:drawableTop="@drawable/ic_bookings"
                android:paddingTop="8dp"
                android:paddingBottom="2dp" />

        </RelativeLayout>

        <!-- Image Preview -->
            <LinearLayout
                android:id="@+id/image_preview1"
                android:layout_width="404dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/text_title"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:background="@drawable/standard"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_bg"
                    android:padding="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/titleText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Standard Billiard Tables"
                        android:textColor="#fff4f0"
                        android:fontFamily="@font/quicksand_bold"
                        android:textSize="14sp"
                        android:layout_marginStart="8dp"
                        android:gravity="start|center_vertical" />

                    <TextView
                        android:id="@+id/priceText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="250/hr"
                        android:textColor="#fff4f0"
                        android:fontFamily="@font/quicksand_bold"
                        android:textSize="14sp"
                        android:layout_marginEnd="8dp"
                        android:gravity="end|center_vertical" />

                </LinearLayout>

                <!-- ICONS -->
                <LinearLayout
                    android:id="@+id/icons_preview1"
                    android:layout_width="404dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_black_sun2"
                    android:layout_below="@id/image_preview1"
                    android:layout_marginTop="13dp"
                    android:layout_centerHorizontal="true"
                    android:padding="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="Perks"
                        android:textColor="#fff4f0"
                        android:fontFamily="@font/quicksand_bold"
                        android:textSize="14sp"
                        android:layout_marginTop="11dp"
                        android:layout_marginStart="30dp"
                        android:background="@drawable/standard_bg"
                        android:textAlignment="center"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/icon_wifi"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_wifi"
                            android:layout_gravity="center_horizontal" />

                        <TextView
                            android:id="@+id/text1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="WIFI"
                            android:textColor="#fff4f0"
                            android:fontFamily="@font/quicksand_bold"
                            android:textSize="8sp"
                            android:layout_marginTop="2dp"
                            android:gravity="center_horizontal" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/icon_bar"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_bar"
                            android:paddingTop="2dp"
                            android:layout_gravity="center_horizontal" />

                        <TextView
                            android:id="@+id/text2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="BAR"
                            android:textColor="#fff4f0"
                            android:fontFamily="@font/quicksand_bold"
                            android:textSize="8sp"
                            android:layout_marginTop="3dp"
                            android:gravity="center_horizontal" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/icon_hours"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_24hrs"

                            android:layout_gravity="center_horizontal" />

                        <TextView
                            android:id="@+id/text3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="24/hrs"
                            android:textColor="#fff4f0"
                            android:fontFamily="@font/quicksand_bold"
                            android:textSize="8sp"
                            android:layout_marginTop="2dp"
                            android:gravity="center_horizontal" />

                    </LinearLayout>

                </LinearLayout>

                <!-- TABLE BUTTONS-->
                <RelativeLayout
                    android:id="@+id/table_buttons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="54dp"
                    android:paddingTop="12dp">

                    <Button
                        android:id="@+id/table1_btn"
                        android:layout_width="168dp"
                        android:layout_height="144dp"
                        android:background="@drawable/table_button_bg"
                        android:layout_marginBottom="14dp"
                        android:layout_alignParentStart="true"
                        android:text="T1"
                        android:textColor="#60fff4f0"
                        android:fontFamily="@font/quicksand_bold"
                        android:textSize="34sp"
                        android:paddingBottom="68dp"
                        android:layout_marginStart="4dp"/>

                    <Button
                        android:id="@+id/table2_btn"
                        android:layout_width="168dp"
                        android:layout_height="144dp"
                        android:background="@drawable/table_button_bg"
                        android:layout_marginBottom="14dp"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/table1_btn"
                        android:text="T2"
                        android:textColor="#60fff4f0"
                        android:fontFamily="@font/quicksand_bold"
                        android:textSize="34sp"
                        android:paddingBottom="68dp"
                        android:layout_marginStart="4dp" />

                    <Button
                        android:id="@+id/table3_btn"
                        android:layout_width="168dp"
                        android:layout_height="144dp"
                        android:background="@drawable/table_button_bg"
                        android:layout_marginBottom="14dp"
                        android:layout_below="@+id/table2_btn"
                        android:text="T3"
                        android:textColor="#60fff4f0"
                        android:fontFamily="@font/quicksand_bold"
                        android:textSize="34sp"
                        android:paddingBottom="68dp"
                        android:layout_marginStart="4dp" />

                    <Button
                        android:id="@+id/table4_btn"
                        android:layout_width="168dp"
                        android:layout_height="144dp"
                        android:background="@drawable/table_button_bg"
                        android:layout_marginBottom="14dp"
                        android:layout_alignParentEnd="true"
                        android:text="T4"
                        android:textColor="#60fff4f0"
                        android:fontFamily="@font/quicksand_bold"
                        android:textSize="34sp"
                        android:paddingBottom="68dp"
                        android:layout_marginEnd="4dp" />

                    <Button
                        android:id="@+id/table5_btn"
                        android:layout_width="168dp"
                        android:layout_height="144dp"
                        android:background="@drawable/table_button_bg"
                        android:layout_marginBottom="14dp"
                        android:layout_below="@+id/table4_btn"
                        android:layout_alignParentEnd="true"
                        android:text="T5"
                        android:textColor="#60fff4f0"
                        android:fontFamily="@font/quicksand_bold"
                        android:textSize="34sp"
                        android:paddingBottom="68dp"
                        android:layout_marginEnd="4dp" />

                    <Button
                        android:id="@+id/table6_btn"
                        android:layout_width="168dp"
                        android:layout_height="144dp"
                        android:background="@drawable/table_button_bg"
                        android:layout_marginBottom="18dp"
                        android:layout_below="@+id/table5_btn"
                        android:layout_alignParentEnd="true"
                        android:text="T6"
                        android:textColor="#60fff4f0"
                        android:fontFamily="@font/quicksand_bold"
                        android:textSize="34sp"
                        android:paddingBottom="68dp"
                        android:layout_marginEnd="4dp" />

                </RelativeLayout>

            </LinearLayout>

        <!-- MIDDLE BUTTONS -->
        <RelativeLayout
            android:id="@+id/buttons"
            android:layout_width="404dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="390dp"
            android:layout_centerHorizontal="true">

            <Button
                android:id="@+id/vip_btn"
                android:layout_width="168dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:text="VIP ROOMS"
                android:textColor="#fff4f0"
                android:textSize="14sp"
                android:fontFamily="@font/quicksand_bold"
                android:background="@drawable/button_background"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/standard_table_btn"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:text="STANDARD TABLES"
                android:textColor="#fff4f0"
                android:textSize="14sp"
                android:fontFamily="@font/quicksand_bold"
                android:background="@drawable/button_background"
                android:layout_marginStart="4dp" />

        </RelativeLayout>

    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>