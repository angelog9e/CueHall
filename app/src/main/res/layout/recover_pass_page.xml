<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recover_pass"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogIn">

    <RelativeLayout
        android:id="@id/log_in"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#151515">

        <!-- TITLE TEXT -->
        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/quicksand_bold"
            android:text="CUEHALL"
            android:layout_marginTop="60sp"
            android:letterSpacing="0.1"
            android:textColor="@color/white"
            android:textSize="34sp" />

        <!-- BACK BUTTON -->
        <Button
            android:id="@+id/bckButton"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="60sp"
            android:layout_marginStart="15sp"
            android:background="@android:color/transparent"
            android:backgroundTint="@android:color/transparent"
            android:drawableTop="@drawable/back_button" />

        <!-- TEXT -->
        <TextView
            android:id="@+id/recover_Text"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="340sp"
            android:fontFamily="@font/quicksand_bold"
            android:textColor="#fff4f0"
            android:textSize="20sp"
            android:textAlignment="center"
            android:text="We’ll send your password info to the email address linked to your account." />

        <!-- EMAIL -->
        <TextView
            android:id="@+id/email_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24sp"
            android:layout_marginBottom="6sp"
            android:layout_marginStart="50sp"
            android:layout_below="@id/recover_Text"
            android:fontFamily="@font/quicksand_bold"
            android:text="EMAIL"
            android:textColor="#01ab7a"
            android:textSize="12sp" />

        <!-- EMAIL INPUT -->
        <EditText
            android:id="@+id/email_input"
            android:layout_width="360sp"
            android:layout_height="50sp"
            android:layout_below="@+id/email_text"
            android:textColor="#151515"
            android:background="@drawable/input_background"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:paddingStart="40sp"
            android:paddingEnd="40sp"
            android:textAlignment="center"
            android:ems="10"
            android:inputType="textEmailAddress" />

        <!-- RECOVER PASSWORD -->
        <Button
            android:id="@+id/recover_pass_btn"
            android:textSize="12sp"
            android:textColor="#fff4f0"
            android:background="@drawable/button_background"
            android:fontFamily="@font/quicksand_bold"
            android:layout_width="174sp"
            android:layout_height="40sp"
            android:layout_below="@id/email_input"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32sp"
            android:text="RECOVER PASSWORD" />

        <!-- CREDITS-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:fontFamily="@font/quicksand_bold"
            android:textColor="#fff4f0"
            android:layout_marginBottom="21.5sp"
            android:textSize="11sp"
            android:text="© 2024 CUEHALL. All rights reserved." />

    </RelativeLayout>

</RelativeLayout>