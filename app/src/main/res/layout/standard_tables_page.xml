<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/standard_tables_page"
    tools:context=".StandardTablesForm">

    <!-- Main Content Layout -->
    <RelativeLayout
        android:id="@+id/bookings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#151515">

        <!-- TITLE TEXT -->
        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/quicksand_bold"
            android:text="CUEHALL"
            android:letterSpacing="0.1"
            android:layout_marginTop="52sp"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <!-- BACK BUTTON -->
        <Button
            android:id="@+id/bckButton"
            android:layout_width="45sp"
            android:layout_height="45sp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="48sp"
            android:layout_marginStart="40sp"
            android:background="@android:color/transparent"
            android:backgroundTint="@android:color/transparent"
            android:drawableTop="@drawable/back_button" />

        <TextView
        android:id="@+id/standard_table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_title"
        android:layout_marginTop="160sp"
        android:text="STANDARD TABLES"
        android:fontFamily="@font/quicksand_bold"
        android:textSize="22sp"
        android:textColor="#fff4f0"
        android:layout_centerHorizontal="true" />

        <!-- TABLE # TEXT -->
        <TextView
            android:id="@+id/table_no"
            android:layout_width="260sp"
            android:layout_height="50sp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_below="@id/standard_table"
            android:layout_marginTop="40sp"
            android:background="@drawable/bg_black_sun2"
            android:textColor="#fff4f0"
            android:fontFamily="@font/quicksand_bold"
            android:textSize="18sp"
            android:gravity="center"
            android:text="TABLE # " />

        <!-- NAME BUTTON -->
        <EditText
            android:id="@+id/name_button"
            android:layout_width="260sp"
            android:layout_height="50sp"
            android:layout_below="@id/table_no"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22sp"
            android:background="@drawable/bg_black_sun2"
            android:fontFamily="@font/quicksand_bold"
            android:hint="NAME"
            android:textColorHint="#fff4f0"
            android:textAlignment="center"
            android:textColor="#fff4f0"
            android:textSize="18sp" />

        <!-- DATE BUTTON -->
        <Button
            android:id="@+id/date_button"
            android:layout_width="260sp"
            android:layout_height="50sp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_black_sun2"
            android:textColor="#fff4f0"
            android:fontFamily="@font/quicksand_bold"
            android:textSize="18sp"
            android:layout_below="@id/name_button"
            android:text="DATE"
            android:layout_marginTop="22sp" />

        <!-- TIME IN BUTTON -->
        <Button
            android:id="@+id/timeIn_btn"
            android:layout_width="260sp"
            android:layout_height="50sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/date_button"
            android:background="@drawable/bg_black_sun2"
            android:textColor="#fff4f0"
            android:fontFamily="@font/quicksand_bold"
            android:textSize="18sp"
            android:text="TIME IN"
            android:layout_marginTop="22sp" />

        <!-- TIME OUT BUTTON -->
        <Button
            android:id="@+id/timeOut_btn"
            android:layout_width="260sp"
            android:layout_height="50sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/timeIn_btn"
            android:background="@drawable/bg_black_sun2"
            android:textColor="#fff4f0"
            android:fontFamily="@font/quicksand_bold"
            android:textSize="18sp"
            android:text="TIME OUT"
            android:layout_marginTop="22sp" />

        <!-- PROCEED BUTTON -->
        <Button
            android:id="@+id/proceed_button"
            android:layout_width="154sp"
            android:layout_height="40sp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_background"
            android:textColor="#fff4f0"
            android:fontFamily="@font/quicksand_bold"
            android:textSize="12sp"
            android:layout_below="@id/timeOut_btn"
            android:text="PROCEED"
            android:layout_marginTop="40sp" />

        <!-- CREDITS -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentBottom="true"
            android:fontFamily="@font/quicksand_bold"
            android:text="Â© 2024 CUEHALL. All rights reserved."
            android:layout_marginBottom="30sp"
            android:textColor="@color/white"
            android:textSize="10sp" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>