<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="700dp"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="#00000000"
    android:id="@+id/about_us">

    <RelativeLayout
        android:id="@+id/popup_container"
        android:layout_width="400dp"
        android:layout_height="700dp"
        android:background="@drawable/bg_knight_black"
        android:layout_gravity="center"
        android:paddingTop="14dp"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true">

        <!-- LOGO -->
        <ImageView
            android:id="@+id/app_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/app_logo" />

        <TextView
            android:layout_width="600dp"
            android:layout_height="900dp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_below="@id/app_logo"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_black_sun2"
            android:textColor="#fff4f0"
            android:fontFamily="@font/quicksand_bold"
            android:textSize="18sp"
            android:gravity="center" />

        <TextView
            android:id="@+id/about_us_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/app_logo"
            android:fontFamily="@font/quicksand_bold"
            android:textColor="#fff4f0"
            android:textSize="20sp"
            android:text="ABOUT US" />

        <!--TextView
            android:layout_width="340dp"
            android:layout_height="490dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/about_us_text"
            android:layout_marginTop="14dp"
            android:textColor="#fff4f0"
            android:textSize="16dp"
            android:fontFamily="@font/quicksand_medium"
            android:text="CueHall is a mobile application that will change the traditional approach of booking and playing billiards in billiard halls. Due to the growing popularity of billiards as a form of entertainment, it is becoming increasingly difficult to identify the availability of tables for use, particularly for billiard hall owners. Conversely, clients frequently experience inconvenience and frustration as a result of unpredictable circumstances and extended waiting times. Import Random addresses these problems by offering an application that allows customers to browse available tables, join wait lists, receive notifications about their reservations, and choose their playing time and duration."
            android:padding="16dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textAlignment="center"
            android:lineSpacingExtra="2dp"-->

        <!-- CONTEXT -->
        <WebView
            android:id="@+id/justified_text"
            android:layout_width="wrap_content"
            android:layout_height="490dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="180dp" />

    </RelativeLayout>

</RelativeLayout>