<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/edit_profile_page"
    tools:context=".EditProfile">

    <RelativeLayout
        android:id="@id/edit_profile_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#151515">

        <!-- TITLE TEXT -->
        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/quicksand_bold"
            android:text="CUEHALL"
            android:letterSpacing="0.1"
            android:textColor="@color/white"
            android:textSize="34sp" />

        <!-- BACK BUTTON -->
        <Button
            android:id="@+id/back_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="45dp"
            android:layout_marginStart="15dp"
            android:background="@android:color/transparent"
            android:backgroundTint="@android:color/transparent"
            android:drawableTop="@drawable/back_button" />

        <!-- EDIT PROFILE TEXT -->
        <TextView
            android:id="@+id/edit_profText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="240dp"
            android:fontFamily="@font/quicksand_bold"
            android:text="EDIT PROFILE"
            android:textColor="#fff4f0"
            android:textSize="22sp" />

        <!-- EDIT USERNAME-->
        <TextView
            android:id="@+id/username_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_profText"
            android:layout_marginTop="20dp"
            android:layout_marginStart="65dp"
            android:fontFamily="@font/quicksand_bold"
            android:text="USERNAME"
            android:textColor="#01ab7a"
            android:textSize="12sp" />

        <!-- EDIT USERNAME INPUT-->
        <EditText
            android:id="@+id/edit_username_input"
            android:layout_width="360dp"
            android:layout_height="48dp"
            android:textColor="#151515"
            android:background="@drawable/input_background"
            android:layout_below="@id/username_text"
            android:layout_marginTop="6dp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:ems="10"
            android:inputType="textEmailAddress" />

        <!-- EMAIL-->
        <TextView
            android:id="@+id/email_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_username_input"
            android:layout_marginTop="10dp"
            android:layout_marginStart="68dp"
            android:fontFamily="@font/quicksand_bold"
            android:text="EMAIL"
            android:textColor="#01ab7a"
            android:textSize="12sp" />

        <!-- EMAIL INPUT -->
        <EditText
            android:id="@+id/edit_emailadd_input"
            android:layout_width="360dp"
            android:layout_height="48dp"
            android:layout_below="@id/email_text"
            android:textColor="#151515"
            android:background="@drawable/input_background"
            android:layout_marginTop="6dp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:ems="10"
            android:inputType="textEmailAddress" />

        <!-- CURRENT PASSWORD -->
        <TextView
            android:id="@+id/password_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_emailadd_input"
            android:layout_marginTop="10dp"
            android:layout_marginStart="68dp"
            android:fontFamily="@font/quicksand_bold"
            android:text="CURRENT PASSWORD"
            android:textColor="#01ab7a"
            android:textSize="12sp" />

        <!-- CURRENT PASSWORD INPUT -->
        <RelativeLayout
            android:id="@+id/current_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/password_text"
            android:layout_centerHorizontal="true"
            >

            <EditText
                android:id="@+id/current_password_input"
                android:layout_width="360dp"
                android:layout_height="48.5dp"
                android:textColor="#151515"
                android:background="@drawable/input_background"
                android:layout_marginTop="6dp"
                android:textAlignment="center"
                android:ems="10"
                android:layout_centerHorizontal="true"
                android:inputType="textPassword" />

            <ImageButton
                android:id="@+id/show_password_button1"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="64dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_show_password" />
        </RelativeLayout>

        <!-- NEW PASSWORD -->
        <TextView
            android:id="@+id/new_password_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/current_password"
            android:layout_marginTop="10dp"
            android:layout_marginStart="68dp"
            android:fontFamily="@font/quicksand_bold"
            android:text="NEW PASSWORD"
            android:textColor="#01ab7a"
            android:textSize="12sp" />

        <!-- NEW PASS INPUT -->
        <RelativeLayout
            android:id="@+id/new_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/new_password_text"
            android:layout_centerHorizontal="true"
            >

            <EditText
                android:id="@+id/new_password_input"
                android:layout_width="360dp"
                android:layout_height="48.5dp"
                android:textColor="#151515"
                android:background="@drawable/input_background"
                android:layout_marginTop="6dp"
                android:textAlignment="center"
                android:ems="10"
                android:layout_centerHorizontal="true"
                android:inputType="textPassword" />

            <ImageButton
                android:id="@+id/show_password_button2"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="64dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_show_password" />
        </RelativeLayout>

        <!-- SAVE BUTTON -->
        <Button
            android:id="@+id/save_btn"
            android:layout_width="154dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#fff4f0"
            android:background="@drawable/button_background"
            android:fontFamily="@font/quicksand_bold"
            android:text="SAVE"
            android:drawableStart="@drawable/ic_logout"
            android:layout_below="@id/new_password"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:paddingStart="20dp"
            android:paddingEnd="24dp"/>

        <!-- CREDITS -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentBottom="true"
            android:text="Â© 2024 CUEHALL. All rights reserved."
            android:layout_marginBottom="30dp"
            android:textColor="@color/white"
            android:textSize="10sp" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>