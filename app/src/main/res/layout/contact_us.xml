<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="600sp"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="#00000000">

    <RelativeLayout
        android:id="@+id/popup_container"
        android:layout_width="400sp"
        android:layout_height="700sp"
        android:background="@drawable/bg_knight_black"
        android:layout_gravity="center"
        android:paddingTop="14sp"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true">

        <!-- LOGO -->
        <ImageView
            android:id="@+id/app_logo"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10sp"
            android:background="@drawable/app_logo" />

        <TextView
            android:id="@+id/black_sun_bg"
            android:layout_width="600sp"
            android:layout_height="900sp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_below="@id/app_logo"
            android:layout_marginTop="10sp"
            android:background="@drawable/bg_black_sun2"
            android:gravity="center" />

        <TextView
            android:id="@+id/contact_us_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/app_logo"
            android:fontFamily="@font/quicksand_bold"
            android:textColor="#fff4f0"
            android:textSize="20sp"
            android:text="CONTACT US" />

        <!-- INSTAGRAM -->
        <TextView
            android:id="@+id/instagram_text"
            android:layout_width="228sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/contact_us_text"
            android:text="FACEBOOK"
            android:textSize="18sp"
            android:textColor="#fff4f0"
            android:fontFamily="@font/quicksand_bold"
            android:textAlignment="center"
            android:drawablePadding="8sp"
            android:paddingStart="22sp"
            android:paddingEnd="24sp"
            app:drawableStartCompat="@drawable/ic_facebook" />

        <!-- FACEBOOK -->
        <TextView
            android:id="@+id/facebook_text"
            android:layout_width="228sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/instagram_text"
            android:text="INSTAGRAM"
            android:textSize="18sp"
            android:textColor="#fff4f0"
            android:fontFamily="@font/quicksand_bold"
            android:textAlignment="center"
            android:drawablePadding="8sp"
            android:paddingStart="22sp"
            android:paddingEnd="24sp"
            app:drawableStartCompat="@drawable/ic_instagram" />

        <!-- CONTACT NUMBER -->
        <TextView
            android:id="@+id/number_text"
            android:layout_width="228sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/facebook_text"
            android:text="09563629014"
            android:textSize="18sp"
            android:textColor="#fff4f0"
            android:fontFamily="@font/quicksand_bold"
            android:textAlignment="center"
            android:drawablePadding="8sp"
            android:paddingStart="22sp"
            android:paddingEnd="24sp"
            app:drawableStartCompat="@drawable/ic_phone" />

        <!-- TELEGRAM-->
        <TextView
            android:id="@+id/telegram_text"
            android:layout_width="228sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/number_text"
            android:text="TELEGRAM"
            android:textSize="18sp"
            android:textColor="#fff4f0"
            android:fontFamily="@font/quicksand_bold"
            android:textAlignment="center"
            android:drawablePadding="8sp"
            android:paddingStart="22sp"
            android:paddingEnd="24sp"
            app:drawableStartCompat="@drawable/ic_telegram" />

        <!-- TIKTOK -->
        <TextView
            android:id="@+id/tiktok_text"
            android:layout_width="228sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/telegram_text"
            android:text="TIKTOK"
            android:textSize="18sp"
            android:textColor="#fff4f0"
            android:fontFamily="@font/quicksand_bold"
            android:textAlignment="center"
            android:drawablePadding="8sp"
            android:paddingStart="22sp"
            android:paddingEnd="24sp"
            app:drawableStartCompat="@drawable/ic_tiktok" />

    </RelativeLayout>

</RelativeLayout>