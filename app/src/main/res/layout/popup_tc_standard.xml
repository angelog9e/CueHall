<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="600sp"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="#00000000"
    android:id="@+id/tc_standard">

    <RelativeLayout
        android:id="@+id/popup_container"
        android:layout_width="400sp"
        android:layout_height="800sp"
        android:background="@drawable/bg_knight_black"
        android:layout_gravity="center"
        android:paddingTop="14sp"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/app_logo"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10sp"
            android:background="@drawable/app_logo" />

        <TextView
            android:id="@+id/room_no"
            android:layout_width="600sp"
            android:layout_height="800sp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_below="@id/app_logo"
            android:layout_marginTop="40sp"
            android:background="@drawable/bg_black_sun2"
            android:textColor="#fff4f0"
            android:fontFamily="@font/quicksand_bold"
            android:textSize="18sp"
            android:gravity="center"
            android:text="" />

        <TextView
            android:id="@+id/about_us_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/app_logo"
            android:fontFamily="@font/quicksand_bold"
            android:textColor="#fff4f0"
            android:textSize="20sp"
            android:text="TERMS AND CONDITIONS" />

        <!-- CONTEXT -->
        <WebView
            android:id="@+id/justified_text"
            android:layout_width="wrap_content"
            android:layout_height="400sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="160sp" />

        <!-- CHECKBOX -->
        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/justified_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20sp"
            android:text="I AGREE"
            android:textSize="16sp"
            android:fontFamily="@font/quicksand_bold"
            android:textColor="#fff4f0"
            android:buttonTint="#fff4f0" />

        <!-- PROCEED BUTTON -->
        <Button
            android:id="@+id/proceed_button"
            android:layout_width="154sp"
            android:layout_height="48sp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_background"
            android:textColor="#fff4f0"
            android:fontFamily="@font/quicksand_bold"
            android:textSize="16sp"
            android:layout_below="@id/checkBox"
            android:text="PROCEED"
            android:layout_marginTop="12sp" />

    </RelativeLayout>

</RelativeLayout>