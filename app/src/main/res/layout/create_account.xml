<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/create_account"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogIn">

    <RelativeLayout
        android:id="@+id/create_acc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#151515">

        <!-- TITLE TEXT -->
        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="52sp"
            android:fontFamily="@font/quicksand_bold"
            android:text="CUEHALL"
            android:letterSpacing="0.1"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <!-- BACK BUTTON -->
        <Button
            android:id="@+id/bckButton"
            android:layout_width="45sp"
            android:layout_height="45sp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="48sp"
            android:layout_marginStart="40sp"
            android:background="@android:color/transparent"
            android:backgroundTint="@android:color/transparent"
            android:drawableTop="@drawable/back_button" />

        <!-- CREATE ACCOUNT TEXT -->
        <TextView
            android:id="@+id/create_accText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="300sp"
            android:fontFamily="@font/quicksand_bold"
            android:text="CREATE ACCOUNT"
            android:textColor="#fff4f0"
            android:textSize="22sp" />

        <!-- USERNAME-->
        <TextView
            android:id="@+id/username_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/create_accText"
            android:layout_marginTop="20sp"
            android:layout_marginStart="50sp"
            android:fontFamily="@font/quicksand_bold"
            android:text="USERNAME"
            android:textColor="#01ab7a"
            android:textSize="12sp" />

        <!-- USERNAME INPUT-->
        <EditText
            android:id="@+id/createUsername"
            android:layout_width="360sp"
            android:layout_height="48sp"
            android:textColor="#151515"
            android:background="@drawable/input_background"
            android:layout_below="@id/username_text"
            android:layout_marginTop="6sp"
            android:paddingStart="80sp"
            android:paddingEnd="80sp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:ems="10"
            android:inputType="textEmailAddress" />

        <!-- EMAIL-->
        <TextView
            android:id="@+id/email_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/createUsername"
            android:layout_marginTop="10sp"
            android:layout_marginStart="50sp"
            android:fontFamily="@font/quicksand_bold"
            android:text="EMAIL ADDRESS"
            android:textColor="#01ab7a"
            android:textSize="12sp" />

        <!-- EMAIL INPUT -->
        <EditText
            android:id="@+id/createEmail"
            android:layout_width="360sp"
            android:layout_height="48sp"
            android:layout_below="@id/email_text"
            android:textColor="#151515"
            android:background="@drawable/input_background"
            android:layout_marginTop="6sp"
            android:paddingStart="40sp"
            android:paddingEnd="40sp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:ems="10"
            android:inputType="textEmailAddress" />

        <!-- PASSWORD -->
        <TextView
            android:id="@+id/password_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/createEmail"
            android:layout_marginTop="10sp"
            android:layout_marginStart="50sp"
            android:fontFamily="@font/quicksand_bold"
            android:text="PASSWORD"
            android:textColor="#01ab7a"
            android:textSize="12sp" />

        <!-- PASSWORD INPUT -->
        <RelativeLayout
            android:id="@+id/input_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/password_text"
            android:layout_centerHorizontal="true">

            <EditText
                android:id="@+id/createPassword"
                android:layout_width="360sp"
                android:layout_height="48.5sp"
                android:textColor="#151515"
                android:background="@drawable/input_background"
                android:layout_marginTop="6sp"
                android:paddingStart="80sp"
                android:paddingEnd="80sp"
                android:textAlignment="center"
                android:ems="10"
                android:layout_centerHorizontal="true"
                android:inputType="textPassword" />

            <ImageButton
                android:id="@+id/btnShowPassword"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="64sp"
                android:layout_marginTop="10sp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_show_password" />

        <!-- CREATE ACCOUNT BUTTON -->
        <Button
            android:id="@+id/btnRegister"
            android:layout_width="154sp"
            android:layout_height="40sp"
            android:textSize="12sp"
            android:textColor="#fff4f0"
            android:background="@drawable/button_background"
            android:fontFamily="@font/quicksand_bold"
            android:text="CREATE ACCOUNT"
            android:layout_below="@id/createPassword"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40sp" />

        </RelativeLayout>

        <!-- SIGN IN -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="110sp"
            android:fontFamily="@font/quicksand_bold"
            android:text="ALREADY HAVE AN ACCOUNT?"
            android:textColor="#fff4f0"
            android:textSize="10sp"
            android:layout_marginBottom="30sp" />

        <Button
            android:id="@+id/sign_in_btn"
            android:layout_width="wrap_content"
            android:layout_height="16sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="88sp"
            android:layout_marginBottom="30sp"
            android:text="SIGN IN"
            android:textColor="#01AB7A"
            android:textSize="10sp"
            android:background="@android:color/transparent"
            android:backgroundTint="@android:color/transparent"
            android:fontFamily="@font/quicksand_bold" />

    </RelativeLayout>

</RelativeLayout>