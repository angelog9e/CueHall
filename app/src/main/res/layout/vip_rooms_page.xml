<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vip_rooms_page"
    tools:context=".VIPRoomsForm">

    <!-- Main Content Layout -->
    <RelativeLayout
        android:id="@+id/bookings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#151515"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <!-- TITLE TEXT -->
        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/quicksand_bold"
            android:text="CUEHALL"
            android:letterSpacing="0.1"
            android:layout_marginTop="60sp"
            android:textColor="@color/white"
            android:textSize="34sp" />

        <!-- BACK BUTTON -->
        <Button
            android:id="@+id/bckButton"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="60sp"
            android:layout_marginStart="15sp"
            android:background="@android:color/transparent"
            android:backgroundTint="@android:color/transparent"
            android:drawableTop="@drawable/back_button" />

        <TextView
            android:id="@+id/vip_rooms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="220sp"
            android:fontFamily="@font/quicksand_bold"
            android:text="VIP ROOMS"
            android:textColor="#fff4f0"
            android:textSize="26sp" />

        <!-- VIP ROOM # TEXT -->
        <TextView
            android:id="@+id/room_no"
            android:layout_width="260sp"
            android:layout_height="50sp"
            android:layout_below="@id/vip_rooms"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40sp"
            android:background="@drawable/bg_black_sun2"
            android:fontFamily="@font/quicksand_bold"
            android:gravity="center"
            android:text="VIP ROOM# "
            android:textAlignment="center"
            android:textColor="#fff4f0"
            android:textSize="20sp" />

        <!-- TIME BUTTON -->
        <Button
            android:id="@+id/time_btn"
            android:layout_width="260sp"
            android:layout_height="50sp"
            android:layout_below="@id/room_no"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22sp"
            android:background="@drawable/bg_black_sun2"
            android:fontFamily="@font/quicksand_bold"
            android:text="TIME"
            android:textColor="#fff4f0"
            android:textSize="20sp" />

        <!-- DATE BUTTON -->
        <Button
            android:id="@+id/date_button"
            android:layout_width="260sp"
            android:layout_height="50sp"
            android:layout_below="@id/time_btn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22sp"
            android:background="@drawable/bg_black_sun2"
            android:fontFamily="@font/quicksand_bold"
            android:text="DATE"
            android:textColor="#fff4f0"
            android:textSize="20sp" />

        <!-- PROCEED BUTTON -->
        <Button
            android:id="@+id/proceed_button"
            android:layout_width="154sp"
            android:layout_height="38sp"
            android:layout_below="@id/date_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40sp"
            android:background="@drawable/button_background"
            android:fontFamily="@font/quicksand_bold"
            android:text="PROCEED"
            android:textColor="#fff4f0"
            android:textSize="16sp" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>