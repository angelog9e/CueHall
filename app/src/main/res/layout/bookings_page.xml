<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bookings_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Bookings">

    <RelativeLayout
        android:id="@+id/bookings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#151515">

        <!-- TEXT TITLE -->
        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/quicksand_bold"
            android:text="CUEHALL"
            android:letterSpacing="0.1"
            android:layout_marginTop="40dp"
            android:textColor="@color/white"
            android:textSize="34sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_title"
            android:layout_marginTop="32dp"
            android:text="BOOKINGS"
            android:fontFamily="@font/quicksand_bold"
            android:textSize="22sp"
            android:textColor="#fff4f0"
            android:layout_centerHorizontal="true" />

        <!-- ACCOUNT BUTTON -->
        <Button
            android:id="@+id/account_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="38dp"
            android:layout_marginEnd="22dp"
            android:background="@drawable/acc_button" />

        <!-- BOOKINGS -->
        <RelativeLayout
            android:id="@+id/bookings_container"
            android:layout_width="400dp"
            android:layout_height="728dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/text_title"
            android:layout_marginTop="80dp"
            android:background="@drawable/bg_black_sun">

            <TextView
                android:id="@+id/bookings_container1"
                android:layout_width="360dp"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/standard_bg"
                android:fontFamily="@font/quicksand_medium"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/bookings_container2"
                android:layout_width="360dp"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/bookings_container1"
                android:layout_marginTop="44dp"
                android:background="@drawable/standard_bg"
                android:fontFamily="@font/quicksand_medium"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/bookings_container3"
                android:layout_width="360dp"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/bookings_container2"
                android:layout_marginTop="44dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/standard_bg"
                android:fontFamily="@font/quicksand_medium"
                android:textSize="14sp" />

        </RelativeLayout>

        <!-- FOOTER -->
        <RelativeLayout
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/footer_bg">

            <!-- BUTTONS -->
            <Button
                android:id="@+id/tables_button"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:text="TABLES"
                android:layout_alignParentStart="true"
                android:layout_marginStart="60dp"
                android:fontFamily="@font/quicksand_bold"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="#fff4f0"
                android:background="@drawable/rounded_button_bg"
                android:drawableTop="@drawable/ic_table"
                android:paddingTop="8dp"
                android:paddingBottom="2dp" />

            <Button
                android:id="@+id/bookings_button"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:text="BOOKINGS"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="60dp"
                android:fontFamily="@font/quicksand_bold"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="#fff4f0"
                android:background="@drawable/rounded_button_bg"
                android:drawableTop="@drawable/ic_bookings"
                android:paddingTop="8dp"
                android:paddingBottom="2dp" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>