<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="550dp"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="#00000000">

    <RelativeLayout
        android:id="@+id/popup_container"
        android:layout_width="400dp"
        android:layout_height="550dp"
        android:background="@drawable/bg_knight_black"
        android:layout_gravity="center"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/app_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/app_logo" />

        <!--TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="#fff4f0"
            android:fontFamily="@font/quicksand_bold"
            android:letterSpacing="0.1"
            android:textSize="34dp"
            android:text="CUEHALL"/-->

        <TextView
            android:id="@+id/st_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/app_logo"
            android:fontFamily="@font/quicksand_bold"
            android:textColor="#fff4f0"
            android:textSize="20sp"
            android:text="STANDARD TABLES" />

        <!--TABLE # TEXT -->
        <TextView
            android:id="@+id/table_no"
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_below="@id/st_text"
            android:layout_marginTop="40dp"
            android:background="@drawable/bg_black_sun2"
            android:textColor="#fff4f0"
            android:fontFamily="@font/quicksand_bold"
            android:textSize="18sp"
            android:gravity="center"
            android:text="TABLE # " />

        <!-- TIME BUTTON -->
        <Button
            android:id="@+id/time_btn"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/table_no"
            android:background="@drawable/bg_black_sun2"
            android:textColor="#fff4f0"
            android:fontFamily="@font/quicksand_bold"
            android:textSize="18sp"
            android:text="TIME"
            android:layout_marginTop="18dp" />

        <!-- DATE BUTTON -->
        <Button
            android:id="@+id/date_button"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_black_sun2"
            android:textColor="#fff4f0"
            android:fontFamily="@font/quicksand_bold"
            android:textSize="18sp"
            android:layout_below="@id/time_btn"
            android:text="DATE"
            android:layout_marginTop="18dp" />

        <!-- PROCEED BUTTON -->
        <Button
            android:id="@+id/proceed_button"
            android:layout_width="154dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_background"
            android:textColor="#fff4f0"
            android:fontFamily="@font/quicksand_bold"
            android:textSize="16sp"
            android:layout_below="@id/date_button"
            android:text="PROCEED"
            android:layout_marginTop="40dp" />

    </RelativeLayout>

</RelativeLayout>