<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/log_in"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogIn"
    android:background="#151515">

    <!-- TITLE TEXT -->
    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52sp"
        android:fontFamily="@font/quicksand_bold"
        android:text="CUEHALL"
        android:letterSpacing="0.1"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <!-- BACK BUTTON -->
    <Button
        android:id="@+id/bckButton"
        android:layout_width="45sp"
        android:layout_height="45sp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="48sp"
        android:layout_marginStart="40sp"
        android:background="@android:color/transparent"
        android:backgroundTint="@android:color/transparent"
        android:drawableTop="@drawable/back_button" />

    <!-- LOGIN TEXT -->
    <TextView
        android:id="@+id/loginText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="325sp"
        android:fontFamily="@font/quicksand_bold"
        android:text="LOGIN"
        android:textColor="#fff4f0"
        android:textSize="22sp" />

    <!-- USERNAME LABEL -->
    <TextView
        android:id="@+id/username_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginText"
        android:layout_marginTop="10sp"
        android:layout_marginStart="50sp"
        android:fontFamily="@font/quicksand_bold"
        android:text="USERNAME"
        android:textColor="#01ab7a"
        android:textSize="12sp" />

    <!-- USERNAME FIELD -->
    <EditText
        android:id="@+id/usernameLogin"
        android:layout_width="360sp"
        android:layout_height="48sp"
        android:textColor="#151515"
        android:background="@drawable/input_background"
        android:layout_below="@id/loginText"
        android:layout_marginTop="32sp"
        android:layout_marginBottom="50sp"
        android:paddingStart="80sp"
        android:paddingEnd="80sp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <!-- PASSWORD LABEL -->
    <TextView
        android:id="@+id/password_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/createPassword"
        android:layout_marginStart="50sp"
        android:fontFamily="@font/quicksand_bold"
        android:text="PASSWORD"
        android:textColor="#01ab7a"
        android:textSize="12sp" />

    <!-- PASSWORD FIELD -->
    <RelativeLayout
        android:id="@+id/createPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/usernameLogin"
        android:layout_centerHorizontal="true">

        <EditText
            android:id="@+id/passwordLogin"
            android:layout_width="360sp"
            android:layout_height="48sp"
            android:textColor="#151515"
            android:background="@drawable/input_background"
            android:layout_marginTop="2sp"
            android:textAlignment="center"
            android:ems="10"
            android:layout_centerHorizontal="true"
            android:inputType="textPassword"
            android:paddingEnd="80sp"
            android:paddingStart="80sp"/>

        <ImageButton
            android:id="@+id/btnShowPasswordLogin"
            android:layout_width="50sp"
            android:layout_height="48sp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="64sp"
            android:layout_marginTop="2sp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_show_password"
            android:visibility="visible"/>
    </RelativeLayout>

    <!-- LOGIN BUTTON -->
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="154sp"
        android:layout_height="40sp"
        android:layout_below="@id/createPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32sp"
        android:text="LOGIN"
        android:textColor="#fff4f0"
        android:textSize="14sp"
        android:fontFamily="@font/quicksand_bold"
        android:background="@drawable/button_background" />

    <!-- FORGOT PASSWORD TEXT -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnLogin"
        android:layout_marginTop="18.4sp"
        android:layout_marginStart="136dp"
        android:layout_alignParentStart="true"
        android:fontFamily="@font/quicksand_bold"
        android:text="Forgot"
        android:textColor="#fff4f0"
        android:textSize="12sp" />

    <!-- FORGOT PASSWORD BUTTON -->
    <Button
        android:id="@+id/btnForgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnLogin"
        android:layout_centerHorizontal="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="136sp"
        android:text="Password?"
        android:textAllCaps="false"
        android:textColor="#01AB7A"
        android:textSize="12sp"
        android:background="@android:color/transparent"
        android:backgroundTint="@android:color/transparent"
        android:fontFamily="@font/quicksand_bold" />

    <!-- SIGN UP TEXT -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="16sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="124sp"
        android:fontFamily="@font/quicksand_bold"
        android:text="DON'T HAVE AN ACCOUNT?"
        android:textColor="#fff4f0"
        android:textSize="10sp"
        android:layout_marginBottom="30sp"/>

    <!-- SIGN UP BUTTON -->
    <Button
        android:id="@+id/btnSignup"
        android:layout_width="wrap_content"
        android:layout_height="16sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="90sp"
        android:layout_marginBottom="30sp"
        android:text="SIGN UP"
        android:textColor="#01AB7A"
        android:textSize="10sp"
        android:background="@android:color/transparent"
        android:backgroundTint="@android:color/transparent"
        android:fontFamily="@font/quicksand_bold" />

</RelativeLayout>